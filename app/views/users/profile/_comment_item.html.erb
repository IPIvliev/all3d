<li class="ms-timeline-item wow materialUp">
	<div class="ms-timeline-date">
		<time class="timeline-time" datetime="">
			<%= Russian::strftime(comment.created_at, "%d %B %Y") %>
		</time>
		<i class="ms-timeline-point bg-<%= timeline_color(comment)%>"></i>
		<%= image_tag comment.user.avatar.url(:thumb), :class => "ms-timeline-point-img" %>
	</div>
	<div class="card">
		<blockquote class="blockquote-color-bg-<%= comment_color(comment)%> withripple color-white">
			<p><%= truncate_html(post_text(comment.body), length: 250, omission: "...") %></p>
			<footer>
				<% if comment.post.present? %>
					<cite title="Source Title"><%= link_to comment.post.title, post_path(comment.post), :style => "color: white;" %></cite>
				<% end %>
				<% if comment.model.present? %>
					<cite title="Source Title"><%= link_to comment.model.title, model_path(comment.model), :style => "color: white;" %></cite>
				<% end %>
			</footer>
		</blockquote>
	</div>
</li>