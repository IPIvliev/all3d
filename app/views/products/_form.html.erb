<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group label-floating has-success">
    <label class="control-label" for="addon2">Название проекта</label>
    <div class="input-group">
      <%= f.text_field :title, :class => "form-control", :id => "addon2" %>
      <span class="input-group-btn">
        <button type="button" class="btn btn-fab btn-fab-mini">
          <i class="material-icons">functions</i>
        </button>
      </span>
    </div>
  </div>

  <div class="form-group label-floating has-success">
    <label class="control-label" for="addon2">Сайт проекта</label>
    <div class="input-group">
      <%= f.text_field :site, :class => "form-control", :id => "addon2" %>
      <span class="input-group-btn">
        <button type="button" class="btn btn-fab btn-fab-mini">
          <i class="material-icons">functions</i>
        </button>
      </span>
    </div>
  </div>

  <br><br>
  <div class="field">
    <%= f.label "Текст статьи" %><br>
    <%= f.cktext_area :text, cols: "130", rows: "7", ckeditor: { language: 'ru'} %>
  </div>
  <div class="form-group">
    <div class="col-md-10 col-md-offset-2">
      <%= f.submit "Сохранить", :class => "btn btn-raised btn-primary", data: { disable_with: "Данные сохраняются..." }  %>
      <%= link_to 'Отмена', projects_path, :class => "btn btn-danger" %>
    </div>
  </div>
<% end %>
