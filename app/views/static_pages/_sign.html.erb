      <!-- Modal -->
      <div class="modal modal-primary" id="ms-account-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog animated zoomIn animated-3x" role="document">
          <div class="modal-content">
            <div class="modal-header shadow-2dp no-pb">
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">
                  <i class="zmdi zmdi-close"></i>
                </span>
              </button>
              <div class="modal-title text-center">
                <span class="ms-logo ms-logo-white ms-logo-sm mr-1">3D</span>
                <h3 class="no-m ms-site-title">Адаптивные технологии
                </h3>
              </div>
              <div class="modal-header-tabs">
                <ul class="nav nav-tabs nav-tabs-full nav-tabs-3 nav-tabs-primary" role="tablist">
                  <li role="presentation" class="active">
                    <a href="#ms-login-tab" aria-controls="ms-login-tab" role="tab" data-toggle="tab" class="withoutripple">
                      <i class="zmdi zmdi-account"></i> Логин</a>
                  </li>
                  <li role="presentation">
                    <a href="#ms-register-tab" aria-controls="ms-register-tab" role="tab" data-toggle="tab" class="withoutripple">
                      <i class="zmdi zmdi-account-add"></i> Регистрация</a>
                  </li>
                  <li role="presentation">
                    <a href="#ms-recovery-tab" aria-controls="ms-recovery-tab" role="tab" data-toggle="tab" class="withoutripple">
                      <i class="zmdi zmdi-key"></i> Восстановить пароль</a>
                  </li>
                </ul>
              </div>
            </div>
            <div class="modal-body">
              <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="ms-login-tab">
                  <%= form_for(User.new, url: session_path(:user), html: {id: 'sign_in_user'}, remote: true) do |f| %>
                    <fieldset>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-account"></i>
                          </span>
                          <label class="control-label" for="ms-form-user">Введите адрес электронной почты</label>
                          <%= f.email_field :email, autofocus: true, :id => "ms-form-user", :class => "form-control" %>
                      </div>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-lock"></i>
                          </span>
                          <label class="control-label" for="ms-form-pass">Пароль</label>
                          <%= f.password_field :password, autocomplete: "off", :id => "ms-form-pass", :class => "form-control" %>
                      </div>
                      <div class="row mt-2">
                        <div class="col-md-6">
                          <%= f.submit "Войти", :class => "btn btn-raised btn-primary pull-right" %>
                        </div>
                      </div>
                    </fieldset>
                    <p class="notice"><%= notice %></p>
                    <p class="alert"><%= alert %></p>
                  <% end %>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="ms-register-tab">
                  <%= form_for(User.new, as: :user, url: registration_path(:user)) do |f| %>
                    <fieldset>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-account"></i>
                          </span>
                          <label class="control-label" for="ms-form-user">Логин</label>
                          <%= f.text_field :name, :id => "ms-form-user", :class => "form-control" %>
                      </div>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-email"></i>
                          </span>
                          <label class="control-label" for="ms-form-email">Email</label>
                          <%= f.email_field :email, autofocus: true, :id => "ms-form-email", :class => "form-control" %>
                      </div>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="fa fa-building-o"></i>
                          </span>
                          <label class="control-label" for="ms-form-city">Город</label>
                          <%= f.text_field :city, autofocus: false, :id => "ms-form-city", :class => "form-control" %>
                      </div>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-lock"></i>
                          </span>
                          <label class="control-label" for="ms-form-pass">Пароль</label>
                          <%= f.password_field :password, autocomplete: "off", :id => "ms-form-pass", :class => "form-control" %>
                      </div>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-lock"></i>
                          </span>
                          <label class="control-label" for="ms-form-pass">Пароль повторно</label>
                          <%= f.password_field :password_confirmation, autocomplete: "off", :id => "ms-form-pass", :class => "form-control" %>
                      </div>
                      <div><%= f.submit "Зарегистрироваться", :class => "btn btn-raised btn-block btn-primary" %></div>
                    </fieldset>
                    <p class="notice"><%= notice %></p>
                    <p class="alert"><%= alert %></p>
                  <% end %>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="ms-recovery-tab">

                  <%= form_for(:user, as: :user, url: password_path(:user), html: { method: :post }) do |f| %>
                  <fieldset>
                    <div class="form-group label-floating">
                      <div class="input-group">
                        <span class="input-group-addon">
                          <i class="zmdi zmdi-email"></i>
                        </span>
                        <label class="control-label" for="ms-form-email">Email</label>
                        <%= f.email_field :email, autofocus: true, :class => "form-control" %>
                    </div>
                    <button class="btn btn-raised btn-block btn-primary">Отправить пароль</button>
                  </fieldset>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>