<div class="container">

  <div class="row">
    <div class="col-md-12">

<h2>Вход на сайт</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<fieldset>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-account"></i>
                          </span>
                          <label class="control-label" for="ms-form-user">Email</label>
                          <%= f.email_field :email, autofocus: true, :id => "ms-form-user", :class => "form-control", :placeholder => "Введите адрес электронной почты" %>
                      </div>
                      <div class="form-group label-floating">
                        <div class="input-group">
                          <span class="input-group-addon">
                            <i class="zmdi zmdi-lock"></i>
                          </span>
                          <label class="control-label" for="ms-form-pass">Пароль</label>
                          <%= f.password_field :password, autocomplete: "off", :id => "ms-form-pass", :class => "form-control", :placeholder => "Пароль" %>
                      </div>
                      <div class="row mt-2">
                        <div class="col-md-6">
                          <%= f.submit "Войти", :class => "btn btn-raised btn-primary pull-right" %>
                        </div>
                      </div>
                    </fieldset>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>
</div>
